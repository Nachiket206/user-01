<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reliance Mart: Interactive Journey</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;900&family=Space+Grotesk:wght@700&display=swap');

        :root {
            --reliance-red: #e31e24;
            --reliance-blue: #00529b;
            --bg-dark: #070b14;
            --text-light: #ffffff;
            --box-bg: #e31e24;
        }

        * { box-sizing: border-box; margin: 0; padding: 0; }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg-dark);
            color: #ffffff;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 40px 20px 100px 20px;
            min-height: 100vh;
            overflow-x: hidden;
        }

        /* --- RICH COLOR GRADED BACKGROUND --- */
        #bg-canvas {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            background: radial-gradient(circle at top right, #1a2a4a, #070b14);
            overflow: hidden;
        }

        .mesh-gradient {
            position: absolute;
            width: 150%;
            height: 150%;
            top: -25%;
            left: -25%;
            background: 
                radial-gradient(circle at 10% 20%, rgba(227, 30, 36, 0.12) 0%, transparent 40%),
                radial-gradient(circle at 90% 80%, rgba(0, 82, 155, 0.15) 0%, transparent 40%);
            filter: blur(100px);
            animation: rotateGrad 30s linear infinite;
        }

        @keyframes rotateGrad {
            0% { transform: rotate(0deg) scale(1); }
            50% { transform: rotate(180deg) scale(1.1); }
            100% { transform: rotate(360deg) scale(1); }
        }

        .floating-icon {
            position: absolute;
            opacity: 0.15;
            pointer-events: none;
            color: white;
            animation: floatUp var(--duration) linear infinite;
            z-index: -1;
        }

        @keyframes floatUp {
            from { transform: translateY(110vh) rotate(0deg); opacity: 0; }
            10% { opacity: 0.2; }
            90% { opacity: 0.2; }
            to { transform: translateY(-10vh) rotate(360deg); opacity: 0; }
        }

        /* --- HEADER --- */
        header { text-align: center; margin-bottom: 60px; z-index: 1; }
        header h1 {
            font-family: 'Space Grotesk', sans-serif;
            font-size: 4rem;
            color: white;
            margin-bottom: 8px;
            letter-spacing: -1px;
            text-transform: uppercase;
        }
        header h1 span { color: var(--reliance-red); }
        header p { font-weight: 900; letter-spacing: 5px; color: #94a3b8; text-transform: uppercase; font-size: 0.8rem; }

        /* --- ROAD CONTAINER --- */
        .road-container {
            position: relative;
            width: 850px;
            height: 1850px;
            background: rgba(255, 255, 255, 0.02);
            border-radius: 60px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.05);
            box-shadow: 0 40px 100px rgba(0,0,0,0.5);
            margin-bottom: 100px;
        }

        .lifestyle-container {
            position: absolute;
            width: 220px;
            z-index: 2;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        .lifestyle-img {
            width: 100%;
            height: 150px;
            object-fit: cover;
            border-radius: 20px 20px 0 0;
            background: #1e293b;
            display: block;
            border-bottom: 3px solid var(--reliance-red);
        }

        .lifestyle-label {
            background: white;
            padding: 12px;
            border-radius: 0 0 20px 20px;
            font-size: 0.75rem;
            font-weight: 900;
            color: var(--reliance-blue);
            text-align: center;
            text-transform: uppercase;
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }

        /* Positioning of images */
        .img1 { top: 60px; right: 50px; }
        .img2 { top: 410px; left: 50px; }
        .img3 { top: 760px; right: 50px; }
        .img4 { top: 1110px; left: 50px; }
        .img5 { top: 1460px; right: 50px; }

        svg { position: absolute; width: 100%; height: 100%; z-index: 1; }
        .road-path { fill: none; stroke: #1e293b; stroke-width: 85; stroke-linecap: round; }
        .road-lines { fill: none; stroke: rgba(255,255,255,0.08); stroke-width: 4; stroke-dasharray: 20, 25; }

        .stop {
            position: absolute;
            width: 380px;
            background: var(--box-bg);
            color: var(--text-light);
            padding: 24px;
            border-radius: 24px;
            z-index: 5;
            transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
            max-height: 68px;
            overflow: hidden;
            cursor: pointer;
            border: 1px solid rgba(255,255,255,0.1);
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        }

        .stop.active { 
            max-height: 600px; 
            transform: scale(1.03);
            background: #f12a31;
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.6);
            overflow-y: auto;
        }

        .stop-header { display: flex; justify-content: space-between; align-items: center; }
        .stop h2 { font-size: 1.15rem; text-transform: uppercase; font-weight: 800; font-family: 'Space Grotesk', sans-serif; }

        .stop-content { margin-top: 20px; opacity: 0; transition: opacity 0.3s; }
        .stop.active .stop-content { opacity: 1; }

        .section-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 15px; margin-bottom: 15px; }
        .info-label { font-size: 0.65rem; font-weight: 900; text-transform: uppercase; color: rgba(255,255,255,0.7); display: block; margin-bottom: 5px; }
        .stop p { font-size: 0.85rem; line-height: 1.4; margin-bottom: 10px; font-weight: 500; }
        .stop-badge { background: white; color: var(--reliance-red); padding: 5px 12px; border-radius: 20px; font-size: 0.7rem; font-weight: 900; margin-bottom: 12px; display: inline-block; }
        
        .opportunity-box {
            background: rgba(0, 82, 155, 0.3);
            border-radius: 12px;
            padding: 12px;
            margin-top: 10px;
            border-left: 4px solid var(--reliance-blue);
        }

        /* --- CART --- */
        #cart {
            position: absolute;
            width: 55px;
            height: 55px;
            z-index: 30;
            offset-path: path("M 400 50 C 700 50, 750 350, 550 350 C 250 350, 50 700, 250 700 C 650 700, 750 1000, 500 1000 C 150 1000, 50 1350, 250 1350 C 600 1350, 750 1550, 400 1550");
        }

        .cart-icon {
            width: 55px;
            height: 55px;
            background: var(--reliance-blue);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 3px solid white;
            box-shadow: 0 0 25px rgba(0, 82, 155, 0.8);
        }

        .cart-icon svg { width: 26px; height: 26px; fill: white; }

        .p1 { top: 110px; left: 40px; }
        .p2 { top: 460px; left: 420px; }
        .p3 { top: 810px; left: 40px; }
        .p4 { top: 1160px; left: 420px; }
        .p5 { top: 1510px; left: 40px; }

        .floating-icon { color: var(--reliance-red); }
    </style>
</head>
<body>

    <div id="bg-canvas">
        <div class="mesh-gradient"></div>
        <div id="icon-stream"></div>
    </div>

    <header>
        <h1>Reliance <span>Mart</span></h1>
        <p>A Seamless Customer Journey</p>
    </header>

    <div class="road-container">
        <!-- Lifestyle Images -->
        <div class="lifestyle-container img1">
            <img id="ai-img-1" class="lifestyle-img" src="https://images.unsplash.com/photo-1516594798947-e65505dbb29d?q=80&w=400&h=300&fit=crop" alt="Planning">
            <div class="lifestyle-label">Planning</div>
        </div>
        <div class="lifestyle-container img2">
            <img id="ai-img-2" class="lifestyle-img" src="https://images.unsplash.com/photo-1534723452862-4c874018d66d?q=80&w=400&h=300&fit=crop" alt="Arrival">
            <div class="lifestyle-label">Arrival</div>
        </div>
        <div class="lifestyle-container img3">
            <img id="ai-img-3" class="lifestyle-img" src="https://images.unsplash.com/photo-1542838132-92c53300491e?q=80&w=400&h=300&fit=crop" alt="Selection">
            <div class="lifestyle-label">Selection</div>
        </div>
        <div class="lifestyle-container img4">
            <img id="ai-img-4" class="lifestyle-img" src="https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?q=80&w=400&h=300&fit=crop" alt="Payment">
            <div class="lifestyle-label">Payment</div>
        </div>
        <div class="lifestyle-container img5">
            <img id="ai-img-5" class="lifestyle-img" src="https://images.unsplash.com/photo-1583258292688-d0213dc5a3a8?q=80&w=400&h=300&fit=crop" alt="Departure">
            <div class="lifestyle-label">Departure</div>
        </div>

        <!-- SVG Road -->
        <svg viewBox="0 0 800 1700">
            <path id="roadLine" class="road-path" d="M 400 50 C 700 50, 750 350, 550 350 C 250 350, 50 700, 250 700 C 650 700, 750 1000, 500 1000 C 150 1000, 50 1350, 250 1350 C 600 1350, 750 1550, 400 1550" />
            <path class="road-lines" d="M 400 50 C 700 50, 750 350, 550 350 C 250 350, 50 700, 250 700 C 650 700, 750 1000, 500 1000 C 150 1000, 50 1350, 250 1350 C 600 1350, 750 1550, 400 1550" />
        </svg>

        <div id="cart">
            <div class="cart-icon">
                <svg viewBox="0 0 24 24"><path d="M7 18c-1.1 0-1.99.9-1.99 2S5.9 22 7 22s2-.9 2-2-.9-2-2-2zM1 2v2h2l3.6 7.59-1.35 2.45c-.16.28-.25.61-.25.96 0 1.1.9 2 2 2h12v-2H7.42c-.14 0-.25-.11-.25-.25l.03-.12.9-1.63h7.45c.75 0 1.41-.41 1.75-1.03l3.58-6.49c.08-.14.12-.31.12-.48 0-.55-.45-1-1-1H5.21l-.94-2H1zm16 16c-1.1 0-1.99.9-1.99 2s.89 2 1.99 2 2-.9 2-2-.9-2-2-2z"/></svg>
            </div>
        </div>

        <!-- STOPS -->
        <!-- Stop 1 -->
        <div class="stop p1" id="stop1" onclick="toggleActive(this)">
            <div class="stop-header"><h2>1. Awareness & Planning</h2><span>‚ñº</span></div>
            <div class="stop-content">
                <span class="stop-badge">Step 01</span>
                <div class="section-grid">
                    <div><span class="info-label">Actions</span><p>Sees local store/WhatsApp offers & makes shopping list.</p></div>
                    <div><span class="info-label">Emotions</span><p>Neutral ‚Üí Slightly rushed</p></div>
                </div>
                <span class="info-label">Thoughts</span>
                <p>‚ÄúI should finish shopping fast. Hope there are discounts.‚Äù</p>
                <span class="info-label">Pain Points</span>
                <p>‚ö†Ô∏è No clear online preview of offers; uncertainty about stock.</p>
                <div class="opportunity-box">
                    <span class="info-label" style="color: white;">Opportunities</span>
                    <p>App-based weekly deal preview & ‚ÄúIn-stock‚Äù indicators.</p>
                </div>
            </div>
        </div>

        <!-- Stop 2 -->
        <div class="stop p2" id="stop2" onclick="toggleActive(this)">
            <div class="stop-header"><h2>2. Entry & Navigation</h2><span>‚ñº</span></div>
            <div class="stop-content">
                <span class="stop-badge">Step 02</span>
                <div class="section-grid">
                    <div><span class="info-label">Actions</span><p>Enters store, picks trolley, looks for specific aisles.</p></div>
                    <div><span class="info-label">Emotions</span><p>Mild confusion</p></div>
                </div>
                <span class="info-label">Thoughts</span>
                <p>‚ÄúWhere is the oil section? This store feels crowded.‚Äù</p>
                <span class="info-label">Pain Points</span>
                <p>‚ö†Ô∏è Poor aisle signage & narrow aisles during peak hours.</p>
                <div class="opportunity-box">
                    <span class="info-label" style="color: white;">Opportunities</span>
                    <p>Color-coded signage & store map near entrance.</p>
                </div>
            </div>
        </div>

        <!-- Stop 3 -->
        <div class="stop p3" id="stop3" onclick="toggleActive(this)">
            <div class="stop-header"><h2>3. Product Selection</h2><span>‚ñº</span></div>
            <div class="stop-content">
                <span class="stop-badge">Step 03</span>
                <div class="section-grid">
                    <div><span class="info-label">Actions</span><p>Compares prices, brands, and combo pack offers.</p></div>
                    <div><span class="info-label">Emotions</span><p>Analytical / Stressed</p></div>
                </div>
                <span class="info-label">Thoughts</span>
                <p>‚ÄúWhich brand is cheaper? Is this offer actually worth it?‚Äù</p>
                <span class="info-label">Pain Points</span>
                <p>‚ö†Ô∏è Small price tags & unclear offer terms.</p>
                <div class="opportunity-box">
                    <span class="info-label" style="color: white;">Opportunities</span>
                    <p>Digital price labels & ‚ÄúBest Value‚Äù product highlighting.</p>
                </div>
            </div>
        </div>

        <!-- Stop 4 -->
        <div class="stop p4" id="stop4" onclick="toggleActive(this)">
            <div class="stop-header"><h2>4. Billing & Checkout</h2><span>‚ñº</span></div>
            <div class="stop-content">
                <span class="stop-badge">Step 04</span>
                <div class="section-grid">
                    <div><span class="info-label">Actions</span><p>Stands in queue, pays via cash, UPI, or card.</p></div>
                    <div><span class="info-label">Emotions</span><p>Frustration ‚Üí Relief</p></div>
                </div>
                <span class="info-label">Thoughts</span>
                <p>‚ÄúThis line is moving too slow. Hope UPI works.‚Äù</p>
                <span class="info-label">Pain Points</span>
                <p>‚ö†Ô∏è Long queues & limited self-checkout options.</p>
                <div class="opportunity-box">
                    <span class="info-label" style="color: white;">Opportunities</span>
                    <p>Express checkout & Scan-and-Pay mobile app feature.</p>
                </div>
            </div>
        </div>

        <!-- Stop 5 -->
        <div class="stop p5" id="stop5" onclick="toggleActive(this)">
            <div class="stop-header"><h2>5. Exit & Post-Purchase</h2><span>‚ñº</span></div>
            <div class="stop-content">
                <span class="stop-badge">Step 05</span>
                <div class="section-grid">
                    <div><span class="info-label">Actions</span><p>Packs items and leaves the store.</p></div>
                    <div><span class="info-label">Emotions</span><p>Tired but satisfied</p></div>
                </div>
                <span class="info-label">Thoughts</span>
                <p>‚ÄúDid I miss anything? Total was more than expected.‚Äù</p>
                <span class="info-label">Pain Points</span>
                <p>‚ö†Ô∏è No easy return/refund info or feedback channel.</p>
                <div class="opportunity-box">
                    <span class="info-label" style="color: white;">Opportunities</span>
                    <p>Digital bill, feedback links, & loyalty points summary.</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        const apiKey = ""; 

        function createIconStream() {
            const container = document.getElementById('icon-stream');
            const icons = ['üõí', 'ü•¶', 'üí≥', 'üì¶', 'üéÅ'];
            setInterval(() => {
                const icon = document.createElement('div');
                icon.className = 'floating-icon';
                icon.innerText = icons[Math.floor(Math.random() * icons.length)];
                icon.style.left = Math.random() * 100 + 'vw';
                icon.style.fontSize = (Math.random() * 20 + 15) + 'px';
                icon.style.setProperty('--duration', (Math.random() * 8 + 10) + 's');
                container.appendChild(icon);
                setTimeout(() => icon.remove(), 18000);
            }, 2500);
        }

        const cart = document.getElementById('cart');
        const milestones = [0.03, 0.28, 0.52, 0.76, 0.97];
        let currentPercent = 0;
        let milestoneIndex = 0;
        let isPaused = false;

        function animate() {
            if (!isPaused) {
                currentPercent += 0.0006; 
                if (currentPercent >= 1) { currentPercent = 0; milestoneIndex = 0; }
                cart.style.offsetDistance = (currentPercent * 100) + '%';
                
                if (milestoneIndex < milestones.length && currentPercent >= milestones[milestoneIndex]) {
                    isPaused = true;
                    const stop = document.getElementById(`stop${milestoneIndex + 1}`);
                    if(stop) stop.classList.add('active');
                    setTimeout(() => {
                        isPaused = false;
                        if(stop) stop.classList.remove('active');
                        milestoneIndex++;
                    }, 7000);
                }
            }
            requestAnimationFrame(animate);
        }

        function toggleActive(element) {
            const wasActive = element.classList.contains('active');
            document.querySelectorAll('.stop').forEach(s => s.classList.remove('active'));
            if (!wasActive) {
                element.classList.add('active');
                isPaused = true;
            } else {
                isPaused = false;
            }
        }

        window.onload = () => {
            createIconStream();
            requestAnimationFrame(animate);
        };
    </script>
</body>
</html>
